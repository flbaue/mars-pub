<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/egc_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="flbaue.amando4.app.EditGeoContact">


    <TextView
        android:id="@+id/egc_lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/txt_name" />

    <EditText
        android:id="@+id/egc_edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/egc_lbl_name"
        android:inputType="textCapWords" />


    <TextView
        android:id="@+id/egc_lbl_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/egc_edt_name"
        android:paddingTop="15dp"
        android:text="@string/txt_phone" />

    <EditText
        android:id="@+id/egc_edt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/egc_lbl_phone"
        android:inputType="phone" />

</RelativeLayout>
